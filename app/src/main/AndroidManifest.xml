<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tommycorp.currentgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityLoginScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityShowCurrentGame"
            android:label="@string/title_activity_show_current_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityDownload"
            android:label="@string/title_activity_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityHeadtoHead"
            android:label="@string/title_activity_activity_headto_head"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
